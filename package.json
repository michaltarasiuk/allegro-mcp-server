{
  "name": "mcp-server-template",
  "version": "1.0.0",
  "description": "MCP Streamable HTTP Server Template with OAuth2.1 support",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "dev:worker": "wrangler dev",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "deploy": "wrangler deploy",
    "deploy:tail": "wrangler tail",
    "kv:create": "wrangler kv:namespace create TOKENS",
    "kv:create:preview": "wrangler kv:namespace create TOKENS --preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "streamable-http",
    "oauth2",
    "server",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.1",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "better-sqlite3": "^11.7.0",
    "dedent": "^1.7.1",
    "drizzle-orm": "^0.38.0",
    "fetch-to-node": "^2.1.0",
    "hono": "^4.8.12",
    "itty-router": "^5.0.17",
    "jose": "^6.1.3",
    "oauth4webapi": "^3.8.3",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^24.2.0",
    "bun-types": "latest",
    "drizzle-kit": "^0.30.0",
    "typescript": "^5.9.2",
    "wrangler": "^3.94.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  }
}
