# =============================================================================
# MCP Server Template - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# See README.md for detailed configuration guide.

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3000
NODE_ENV=development

# -----------------------------------------------------------------------------
# MCP Protocol
# -----------------------------------------------------------------------------
MCP_TITLE="My MCP Server"
MCP_VERSION=1.0.0
MCP_INSTRUCTIONS="Use these tools responsibly."
MCP_PROTOCOL_VERSION=2025-06-18

# -----------------------------------------------------------------------------
# Authentication (Resource Server)
# -----------------------------------------------------------------------------
AUTH_ENABLED=false
AUTH_REQUIRE_RS=false
AUTH_ALLOW_DIRECT_BEARER=true

# -----------------------------------------------------------------------------
# OAuth Provider Configuration
# -----------------------------------------------------------------------------
# PROVIDER_CLIENT_ID=your-client-id
# PROVIDER_CLIENT_SECRET=your-client-secret
# PROVIDER_ACCOUNTS_URL=https://accounts.google.com
# PROVIDER_API_URL=https://www.googleapis.com

# -----------------------------------------------------------------------------
# OAuth Endpoints
# -----------------------------------------------------------------------------
# OAUTH_AUTHORIZATION_URL=https://accounts.google.com/o/oauth2/v2/auth
# OAUTH_TOKEN_URL=https://oauth2.googleapis.com/token
# OAUTH_REVOCATION_URL=https://oauth2.googleapis.com/revoke
OAUTH_SCOPES=
OAUTH_REDIRECT_URI=http://localhost:3000/callback
OAUTH_REDIRECT_ALLOWLIST=
OAUTH_REDIRECT_ALLOW_ALL=false

# -----------------------------------------------------------------------------
# Storage & Logging
# -----------------------------------------------------------------------------
RS_TOKENS_FILE=.data/tokens.json
LOG_LEVEL=info
RPS_LIMIT=10
CONCURRENCY_LIMIT=5
